<p id="notice"><%= notice %></p>
<nav>
  Admin View |
  <%= link_to 'Planes', airplanes_path %> |
  <%= link_to 'Flights', flights_path %>
</nav>
<br>

<%= render 'form' %>

<hr>
<h3>Flights</h3>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Flight</th>
      <th>From > To</th>
      <th>Plane</th>
      <th>Capacity</th>
      <th>Remaning</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.number %></td>
        <td><%= "#{flight.origin} > #{flight.destination}" %></td>
        <td><%= flight.airplane.name %></td>
        <td><%= flight.capacity %></td>
        <td><%= flight.remaining %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Cancel', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
